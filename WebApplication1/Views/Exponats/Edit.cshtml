@model WebApplication1.Models.Exponat

@{
    ViewData["Title"] = "Редагувати експонат";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">Редагувати експонат</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Назва</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Опис</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Material" class="form-label">Матеріал</label>
                    <input asp-for="Material" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Technique" class="form-label">Техніка</label>
                    <input asp-for="Technique" class="form-control" />
                    <span asp-validation-for="Technique" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreationYear" class="form-label">Рік створення</label>
                    <input asp-for="CreationYear" class="form-control" />
                    <span asp-validation-for="CreationYear" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Condition" class="form-label">Стан</label>
                    <input asp-for="Condition" class="form-control" />
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorId" class="form-label">Автор</label>
                    <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CollectionId" class="form-label">Колекція</label>
                    <select asp-for="CollectionId" class="form-select" asp-items="ViewBag.CollectionId"></select>
                    <span asp-validation-for="CollectionId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LocationId" class="form-label">Локація</label>
                    <select asp-for="LocationId" class="form-select" asp-items="ViewBag.LocationId"></select>
                    <span asp-validation-for="LocationId" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-warning me-2">Зберегти</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
