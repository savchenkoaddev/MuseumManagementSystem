@model IEnumerable<WebApplication1.Models.Exponat>

@{
    ViewData["Title"] = "Список експонатів";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center text-primary">@ViewData["Title"]</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Додати експонат
        </a>
    </div>

    <form asp-action="Index" method="get" class="row g-2 mb-4 p-3 bg-light border rounded shadow-sm">
        <div class="col-md-3">
            <input type="text" name="searchAuthor" class="form-control" placeholder="Автор" value="@Context.Request.Query["searchAuthor"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchCollection" class="form-control" placeholder="Колекція" value="@Context.Request.Query["searchCollection"]" />
        </div>
        <div class="col-md-3">
            <input type="text" name="searchMaterial" class="form-control" placeholder="Матеріал" value="@Context.Request.Query["searchMaterial"]" />
        </div>
        <div class="col-md-2">
            <input type="number" name="year" class="form-control" placeholder="Рік" value="@Context.Request.Query["year"]" />
        </div>
        <div class="col-md-1 d-grid">
            <button type="submit" class="btn btn-primary">Фільтр</button>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Author?.LastName @item.Author?.FirstName</h6>
                        <p class="card-text"><strong>Опис:</strong> @item.Description</p>
                        <p class="card-text"><strong>Матеріал:</strong> @item.Material</p>
                        <p class="card-text"><strong>Техніка:</strong> @item.Technique</p>
                        <p class="card-text"><strong>Рік:</strong> @item.CreationYear</p>
                        <p class="card-text"><strong>Колекція:</strong> @item.Collection?.Name</p>
                        <p class="card-text"><strong>Локація:</strong> @item.Location?.Address</p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Деталі</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
