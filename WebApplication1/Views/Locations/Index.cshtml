@model IEnumerable<WebApplication1.Models.Location>
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Місця зберігання</h3>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Додати нове
    </a>
</div>

<div class="row g-4">
    @foreach (var location in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@location.Name</h5>
                    <p class="card-text mb-1"><strong>Адреса:</strong> @location.Address</p>
                    <p class="card-text"><strong>Умови зберігання:</strong> @location.StorageConditions</p>
                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-primary btn-sm">
                            Деталі
                        </a>
                        <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-warning btn-sm">
                            Редагувати
                        </a>
                        <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger btn-sm">
                            Видалити
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
