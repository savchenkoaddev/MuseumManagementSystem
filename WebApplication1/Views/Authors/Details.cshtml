@model WebApplication1.Models.Author

@{
    ViewData["Title"] = "Деталі автора";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Рік народження</dt>
            <dd class="col-sm-9">@Model.BirthYear</dd>

            <dt class="col-sm-3">Рік смерті</dt>
            <dd class="col-sm-9">@Model.DeathYear</dd>

            <dt class="col-sm-3">Біографія</dt>
            <dd class="col-sm-9">@Model.Biography</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
        <a class="btn btn-secondary" asp-action="Index">Назад до списку</a>
    </div>
</div>
