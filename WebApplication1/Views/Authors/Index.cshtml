@model IEnumerable<WebApplication1.Models.Author>

@{
    ViewData["Title"] = "Автори";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Автори</h3>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Створити нового автора
    </a>
</div>

<div class="row g-4">
    @foreach (var author in Model)
    {
        <div class="col-md-4">
            <div class="author-card position-relative overflow-hidden shadow-sm rounded-4 border border-2 border-primary p-3 h-100">
                <div class="author-card-body">
                    <h4 class="fw-bold">@author.FirstName @author.LastName</h4>
                    <p class="text-muted mb-2">@if (author.BirthYear != null)
                        {
                            @author.BirthYear
                        } - @if (author.DeathYear != null)
                        {
                            @author.DeathYear
                        }</p>
                    <p class="text-truncate" style="max-height: 3em;">@author.Biography</p>
                </div>
                <div class="author-card-overlay d-flex flex-column justify-content-center align-items-center">
                    <a class="btn btn-light btn-sm mb-2" asp-action="Details" asp-route-id="@author.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm mb-2" asp-action="Edit" asp-route-id="@author.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@author.Id">Видалити</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .author-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .author-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
</style>