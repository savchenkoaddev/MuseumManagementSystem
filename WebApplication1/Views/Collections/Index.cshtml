@model IEnumerable<WebApplication1.Models.Collection>
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Колекції</h3>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Створити нову колекцію
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-primary">
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th class="text-end">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model)
        {
            <tr>
                <td>@collection.Name</td>
                <td>@collection.Description</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@collection.Id" class="btn btn-sm btn-primary me-1">
                        Деталі
                    </a>
                    <a asp-action="Edit" asp-route-id="@collection.Id" class="btn btn-sm btn-warning me-1">
                        Редагувати
                    </a>
                    <a asp-action="Delete" asp-route-id="@collection.Id" class="btn btn-sm btn-danger">
                        Видалити
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
